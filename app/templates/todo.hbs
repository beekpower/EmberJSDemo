<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Todo List <small>test</small>
    </h1>
    <ol class="breadcrumb">
      <li>
        <i class="fa fa-dashboard"></i>  {{#link-to 'index'}}<a href="#">Weather Overview</a>{{/link-to}}
      </li>
      <li class="active">
        <i class="fa fa-edit"></i> Forms
      </li>
    </ol>
  </div>
</div>
<div class="row">
  <div class="container">
    <!-- Todos input -->
      <div class="input-group">
        {{input type="text" placeholder="Something that needs to be done." value=todoInput class="form-control"}}
        <span class="input-group-btn">
          <input {{action "addTodo"}} type="submit" class="btn btn-primary" value="Add">
        </span>
      </div>

  <p></p>

  <!-- Todos list -->
  <div ui-sortable>
    {{#each}}
    <p class="input-group" style="padding:5px 10px; cursor: move;">
      {{input type="text" class="form-control" value=title}}
       <span class="input-group-addon">
         Completed?
        <input {{action "completedAction" this.title}} value=completed type="checkbox">
      </span>
      <span class="input-group-btn">
        <button {{action "removeTodo" this}} class="btn btn-danger" aria-label="Remove">X</button>
      </span>
    </p>
    {{/each}}
  </div>

</div>
</div>
